@model UsuarioModel
@{
    ViewData["Title"] = "Registrar";
}
<div id="cadastro-usuario">

    <center>
        <div class="row">
            <div class="col-md-12 section-header" style="border-bottom: 1px solid; border-bottom-color: #eaeaea; padding-bottom:10px;">
                <h3 class="title">
                    CADASTRAR USUÁRIO
                </h3>
            </div>
        </div>
        <br />
        <center>

            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="col-md-12" asp-action="RegistrarUsuario">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Login, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div style="display:none">
                                    @Html.HiddenFor(m => m.PreReserva)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Senha, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-4">
                                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmacaoSenha,"Confirmação de Senha", new { @class = "col-md-3 control-label" })
                                    <div class="col-md-4">
                                        @Html.PasswordFor(m => m.ConfirmacaoSenha, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-9 col-md-2">
                                        <input type="submit" class="btn btn-success" value="Registrar" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </center>
    </center>
</div>